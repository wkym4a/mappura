<%= notice %>
<%= alert %>
<%= devise_error_messages! %>

<div class="user_form">

  <h3>ログイン画面</h3>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div  class="line_info">
      <%= f.label :email ,class: "line_content_1"  %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: "line_content_2"%>
    </div>

    <div c class="line_info">
      <%= f.label "パスワード" ,class: "line_content_1"  %><br />
      <%= f.password_field :password, autocomplete: "current-password",class: "line_content_2" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div  class="line_info">
        <div  class="line_content_annotation">
          <%= f.check_box :remember_me %>
          <%= f.label "保存する" %>
        </div>
      </div>
    <% end %>

    <div  class="line_info">
      <%= f.submit "ログイン" ,class: "btn btn-primary line_content_1" %>
    </div>
  <% end %>
