<%= render "devise/shared/error_messages", resource: resource ,form_type: "change_new_password"%>

<div class="user_form">

<h2><%= t('activerecord.attributes.user.password') + t('verb.reset') + t('noun.form')  %></h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.hidden_field :reset_password_token %>

    <%= f.label :password, t('adjective.new') +  t('activerecord.attributes.user.password') + t('errors.messages.empty') %><br />
    <div class="line_info">
      <%= f.label t('activerecord.attributes.user.password') ,class: "line_content_1"  %>
      <%= f.password_field :password, autofocus: true,  autocomplete: "new-password"  ,class: "line_content_2_large_interval"%>
    </div>

    <div class="line_info">
      <%= f.label t('activerecord.attributes.user.password_confirmation') ,class: "line_content_1"  %>
      <%= f.password_field :password_confirmation, autocomplete: "new-off" ,class: "line_content_2_large_interval" %>
    </div>

    <div class="line_info">
      <% if @minimum_password_length %>
        <%= f.label "â€»" + t('activerecord.attributes.user.password') + t('errors.messages.too_short' ,count: @minimum_password_length) ,class: "line_content_annotation"  %>
      <% end %><br />
    </div>

    <div class="actions">
      <%= f.submit t('activerecord.attributes.user.password') + t('verb.reset') ,class: "btn btn-primary line_content_btn" %>
    </div>
  <% end %>

</div>
