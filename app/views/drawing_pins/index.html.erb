<div>


  <div class="index_search_box">
  【検索条件】
    <%= form_with scope: :conditions, url:index_search_drawing_pins_path,method: :get ,remote: true do |form| %>

      <div class="index_search_line">
        <div class="index_search_item">
          <%= form.label "ユーザーネーム"%>

          <% if user_signed_in? %>
            <%= form.text_field :user_name ,value: current_user.user_name %>
          <% else %>
            <%= form.text_field :user_name  %>
          <% end %>

        </div>
        <div class="index_search_item">

          <%= form.label "登録日"%>
          <%= form.date_field :created_at_from %>
          <%= form.label "〜"%>
          <%= form.date_field :created_at_to %>
        </div>
      </div>

      <div class="index_search_line">

        <div class="index_search_item">

          <%= form.label "名称"%>
          <%= form.text_field :pin_name %>
        </div>
        <div class="index_search_item">

          <%= form.label "更新日"%>
          <%= form.date_field :updated_at_from %>
          <%= form.label "〜"%>
          <%= form.date_field :updated_at_to %>
        </div>
      </div>

      <div class="index_search_line">

        <div class="index_search_item">
          <%= form.label "詳細"%>
          <%= form.text_field :pin_article %>

        </div>
        <div class="index_search_item">
          <%= form.label "住所"%>
          <%= form.text_field :address %>
        </div>
      </div>


      <div class="index_search_line">

        <div class="index_search_item">

        </div>
        <div class="index_search_item">
          <%= form.submit "検索" %>

        </div>
      </div>


    <% end %>
  </div>
  
  <!-- メッセージとか -->
  <!-- <p id="notice"><%= notice %></p> -->
  <p id="notice_msg"><%= render 'layouts/show_notice_msg' %></p>
  <p id="danger_msg"><%= render 'layouts/show_danger_msg' %></p>


  <div id="search_result">

      <%= render 'search_result', drawing_pins: @drawing_pins, drawing_pins_json: @drawing_pins_json %>

  </div>

  </div>
