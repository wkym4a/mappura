<%# item_type:「0」→グリッド欄のアイテム、「１」→地図上の吹きだし %>

<% if item_type == 0 %>

  <input name="latitude" type="hidden" data-target = "pin-index.latitude" value= <%= pin.latitude %>  data-action-pin-id = <%= pin.id.to_s %> >
  <input name="longitude" type="hidden" data-target = "pin-index.longitude" value= <%= pin.longitude %>  data-action-pin-id = <%= pin.id.to_s %> >

<% end %>

<!-- <div class="index_grid_item"> -->
  <div class="index_grid_item_head">
    <a><%= pin.pin_name %></a>
  </div>

  <div class="index_grid_item_body">

    <% if item_type == 0 %>
      <div class="index_grid_item_body_left" data-action = "click->pin-index#move" data-action-pin-id = <%= pin.id.to_s %> >
    <% else %>
      <div class="index_grid_item_body_left" >
    <% end %>

      <% if pin.image && pin.image.url %>
        <%= image_tag(pin.image.url,class: 'index_grid_item_imagecontent')  %>
      <% else %>
        <a class="index_grid_item_imagecontent" >画像未登録</a>
      <% end %>
    </div>

    <div class="index_grid_item_body_right">
      <div class="index_grid_item_body_maintext">
        <strong>【記事】：</strong><%= pin.pin_article.truncate(22) %>
      </div>
      <div class="index_grid_item_body_fittings">
        <a class="btn btn-primary btn-sm" >更新→未作成</a>
      </div>
    </div>
  </div>

  <div class="index_grid_item_line_1" data-controller="judge-add-or-remove">
    <% if currentuser_info.present? %>


      <%= form_with model: WorkboxPin.new, method: :post , url: create_or_destroy_from_index_workbox_pins_path, :data => {:target => "judge-add-or-remove.form"} , remote: true do |form| %>

        <input type="hidden" value= "workbox" data-target = "judge-add-or-remove.selected_info_type" >
        <%= form.hidden_field :workbox_id ,value: 0,:data => {:target => "judge-add-or-remove.selected_info_id"}  %>
        <%= form.hidden_field :drawing_pin_id ,value: pin.id,:data => {:target => "judge-add-or-remove.pin_id"}  %>
        <input type="hidden" name="_method" value="" data-target = "judge-add-or-remove.method" >

        <a>作業箱:</a>
        <%= select :workbox_id,"", currentuser_workboxes ,{}, {:data => {:target => "judge-add-or-remove.selected_info",:action => "change->judge-add-or-remove#select"}}  %>
        <%= form.submit "あいうえ",:data => {:target => "judge-add-or-remove.btn"} %>
        <%# <%= form.submit "に追加",:data => {:target => "judge-add-or-remove.add_btn"} %>
        <%# <%= form.submit "から削除",:data => {:target => "judge-add-or-remove.remove_btn"} %> %> %>
      <% end %>
    <% end %>

  </div>



<!-- </div> -->
